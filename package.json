{
  "name": "alessiopweb",
  "description": "Personal website of Alessio Prestileo",
  "version": "1.0.0",
  "license": "See LICENSE file",
  "author": "Alessio Prestileo",
  "engines": {
    "node": "14.x.x"
  },
  "scripts": {
    "deploy": "gcloud app deploy",
    "build:client": "webpack --config webpack.config.prod.js",
    "build:server": "tsc --project tsconfig.server.prod.json --outDir dist",
    "format": "prettier --write .",
    "gcp-build": "npm run build:server && npm run build:client",
    "lint": "eslint .",
    "pre-push": "lint-staged && npm run type-check && npm run test",
    "prepare": "husky install",
    "start:client": "webpack serve --config webpack.config.dev.js",
    "start:server": "cross-env NODE_ENV=DEVELOPMENT ts-node-dev --project tsconfig.server.dev.json ./index.ts",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.16.0",
    "@types/jest": "^29.1.2",
    "@types/node": "^14.14.7",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-react": "^7.31.8",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "wait-port": "^0.3.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
